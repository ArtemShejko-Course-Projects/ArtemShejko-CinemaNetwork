        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema_CP_WPF.Views"
        xmlns:vm="clr-namespace:Cinema_CP_WPF.ViewsModels"
        d:DataContext="{d:DesignInstance Type=vm:СashierViewModel}"
        mc:Ignorable="d"
        Title="СashierView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" HorizontalAlignment="Stretch"  Margin="1.1,1,1,1" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>
            <Button Content="Screen" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Background="DarkOliveGreen"/>


        </Grid>
        <ListBox HorizontalAlignment="Left" Height="186" Margin="0,1,0,0" VerticalAlignment="Top" Width="255"/>
    </Grid>

